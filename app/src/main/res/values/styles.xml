<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">#F57C00</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Button Styles - Updated for better spacing -->
    <style name="BaseButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item> <!-- Changed from fixed height -->
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item> <!-- Reduced margin -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">16dp</item> <!-- Reduced corner radius -->
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item> <!-- Minimal padding -->
        <item name="android:insetTop">0dp</item> <!-- Remove Material button insets -->
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="NumberButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">#333333</item>
        <item name="rippleColor">#555555</item>
    </style>

    <style name="OperationButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">#FF9800</item>
        <item name="rippleColor">#FFA726</item>
    </style>

    <style name="FunctionButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">#424242</item>
        <item name="rippleColor">#616161</item>
        <item name="android:textSize">14sp</item> <!-- Smaller text for function buttons -->
    </style>

    <style name="EqualsButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">#3F51B5</item>
        <item name="rippleColor">#5C6BC0</item>
    </style>
</resources>